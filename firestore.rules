rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // Events collection
    match /events/{eventId} {
      // Anyone can read events
      allow read: if true;
      // Admins can manage events
      allow write: if isAdmin();
    }
    
    // Batches collection
    match /batches/{batchId} {
      // Anyone can read batches for active events
      allow read: if true;
      // Admins can manage batches
      allow write: if isAdmin();
    }
    
    // Registrations collection
    match /registrations/{registrationId} {
      // Users can read their own registrations
      allow read: if request.auth != null && 
                     (request.auth.uid == resource.data.userId || isAdmin());
      // Allow unauthenticated reads for ticket verification (API routes)
      allow read: if true;
      // Anyone can create registrations (for public event registration)
      allow create: if true;
      // Allow updates for ticket verification (status change to "Used")
      allow update: if true;
      // Only admins can delete registrations
      allow delete: if isAdmin();
    }
    
    // Admins collection (only readable by admins themselves)
    match /admins/{adminId} {
      allow read: if request.auth != null && request.auth.uid == adminId;
      // Only existing admins can add new admins
      allow write: if isAdmin();
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read and write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Admins can read all users
      allow read: if isAdmin();
    }
  }
}
